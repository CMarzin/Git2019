{% extends 'base.html.twig' %}

{% block body %}
    <h1>Monster</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ monster.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ monster.name }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ monster.bio }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('monster_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('monster_edit', { 'id': monster.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
